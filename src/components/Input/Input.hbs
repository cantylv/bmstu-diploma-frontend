<div class="input" id="{{this.id}}-container">

	{{#if this.button}}
		<div id="search-button"></div>
	{{else if this.isPassword}}
		<button id="btn-eye" type="button" class="hidden">
			<img id="eye-open" src="assets/eye-open.svg" alt="eye-open" />
			<img id="eye-close" src="assets/eye-close.svg" alt="eye-close" />
		</button>
	{{/if}}

	{{#if this.dynamic}}
		<input id={{this.id}} type={{this.type}} placeholder=" " class="dynamic" value="{{this.value}}" />
		<span class="input__label">{{this.placeholder}}</span>
	{{else}}
		<input id={{this.id}} type={{this.type}} placeholder="{{this.placeholder}}" value="{{this.value}}"/>
	{{/if}}

</div>
